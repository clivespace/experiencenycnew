{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "installCommand": "npm install --legacy-peer-deps",
  "framework": "nextjs",
  "devCommand": "npm run dev",
  "github": {
    "silent": true,
    "enabled": true
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "GOOGLE_API_KEY": "@google_api_key",
    "GOOGLE_CSE_ID": "@google_cse_id",
    "UNSPLASH_ACCESS_KEY": "@unsplash_access_key"
  }
} 